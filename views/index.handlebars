<div class="container text-center">
    <h1 class="text-center">
        Burger Mania!
    </h1>
    <div class="row">
        <div class="col-sm-4">
            <h2>The Proud</h2>

            <ol class="proud">
                {{#each burgers}} {{#unless devoured}}
                <li>
                    <span class="label">Your Burger!:</span> {{this.burger_name}}
                    <button type="submit" class="eat-burger" data-id="{{this.id}}" name="devoured" value="true">Give in to the mania</button>
                    <p>Or</p>
                    <button type="submit" class="delete-burger" data-id="{{this.id}}">DELETE</button>
                </li>

                {{/unless}} {{/each}}
            </ol>

        </div>

                <div class="col-sm-4">

            <h2>Add your burger here</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="burger_name">
                </div>

                <button type="submit" class="add-burger">Add burger</button>
            </form>

        </div>

        <div class="col-sm-4">
            <h2>The Fallen</h2>
            <ol>
                {{#each burgers}} {{#if devoured }}
                <p>
                    <span class="label"></span> {{this.burger_name}}</p>
                <button type="submit" class="delete-burger" data-id="{{this.id}}">DELETE!</button>

                {{/if}} {{/each}}

            </ol>

        </div>
    </div>
</div>